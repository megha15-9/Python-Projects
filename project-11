def check_movie_eligibility():
    try:
        age = int(input("Enter your age: "))
        
        if age < 0:
            print("Age cannot be negative. Please enter a valid age.")
            return
        
        if age >= 18:
            print("You are eligible to watch the movie.")
        elif age < 15:
            print("You can watch the movie with your parents.")
        else:
            print("You are not allowed to watch this movie.")
    
    except ValueError:
        print("Invalid input! Please enter a number.")

check_movie_eligibility()
